'.source.fortran':
  'editor':
    'increaseIndentPattern': '(?ix)^\\s*
                              (
                                (((integer\\s+)?recursive|(recursive\\s+)?integer)\\s+)?function\\b
                                | ((if.*then)|for|do|else|elseif|program|where|type|module|program|subroutine|interface|pure|elemental)\\b
                                | (contains|else)\\s*$
                              )'
    'decreaseIndentPattern': '(?i)^\\s*(end(if)?\\b|(contains|else)\\s*$)'
'.source.fortran.modern':
  'editor':
    'commentStart': '! '
    'commentEnd': ''
'.source.fortran .meta.function.interface':
  'editor':
    'completions': [
      'module procedure'
      'operator'
      'assignment(=)'
    ]
'.source.fortran .meta.specification':
  'editor':
    'completions': [
      'parameter'
      'dimension()'
      'allocatable'
      'intent()'
    ]
